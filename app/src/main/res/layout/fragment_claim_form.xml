<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClaimForm">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A587B"
        android:gravity="center_horizontal"
        android:text="CLAIM ENTRY"
        android:textSize="20dp"
        android:layout_marginRight="38dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox"
            android:text=" Claim Details "
            android:textSize="15dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TableRow android:layout_height="30dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Date of Loss/Event:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/datepicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cal" />

                        <EditText
                            android:id="@+id/ldate"
                            android:layout_width="115dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/textbox2"
                            android:gravity="center"
                            android:hint="DD-MM-YYYY"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:textColorHint="#808080"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Date of Intimation:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/datepicker1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cal" />

                        <EditText
                            android:id="@+id/idate"
                            android:layout_width="115dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/textbox2"
                            android:gravity="center"
                            android:hint="DD-MM-YYYY"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:textColorHint="#808080"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="130dp"
                    android:layout_height="32dp"
                    android:text="Claim Settlement Type:"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/cstype"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/cashless"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="CashLess"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                         />

                    <RadioButton
                        android:id="@+id/reimbu"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="ReImbursement"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        />
                </RadioGroup>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/textbox"
            android:text=" Claiment Details "
            android:textSize="15dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TableRow android:layout_height="30dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Name:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#808080"
                        android:textSize="15dp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Same as Policy\nHolder" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/relation"
                android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Relationship\n(with policy holder):"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/rname"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#808080"
                        android:textSize="15dp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Email ID:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:background="@drawable/textbox2"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="#808080"
                        android:textSize="15dp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Mobile:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:background="@drawable/textbox2"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textColorHint="#808080"
                        android:textSize="15dp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Place of Incident:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/pofinci"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#808080"
                        android:textSize="15dp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Incident:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/incident"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#808080"
                        android:textSize="15dp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Surveyor Name:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/sname"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#808080"
                        android:textSize="15dp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Garage Name:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/gname"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#808080"
                        android:textSize="15dp" />

                </LinearLayout>
            </TableRow>


        </TableLayout>

        <Button
            android:id="@+id/addstatus"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button3"
            android:gravity="center"
            android:text=" Add Status "
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button2"
                android:text="Save" />

            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button2"
                android:text="Reset" />

        </LinearLayout>
    </LinearLayout>


</FrameLayout>