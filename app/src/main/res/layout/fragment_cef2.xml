<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cef2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A587B"
        android:gravity="center_horizontal"
        android:text="CEF ENTRY"
        android:textSize="20dp"
        android:layout_marginRight="38dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox"
            android:text=" Personal Details "
            android:textSize="15dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TableRow android:layout_height="30dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Qualification:"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/groupname"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:textSize="15dp"
                        android:textColorHint="#808080"
                        />
                </LinearLayout>
            </TableRow>

            <TableRow android:layout_marginTop="12dp"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Occupation:"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/occupation"
                        android:layout_width="161dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:backgroundTint="#B79C70"
                        android:backgroundTintMode="screen" />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_marginTop="12dp"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Sector:"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/sector"
                        android:layout_width="161dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:backgroundTint="#B79C70"
                        android:backgroundTintMode="screen" />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Firm Name:"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/pan"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:textSize="15dp"
                        android:textColorHint="#808080"
                        />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView82"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Designation:"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/designation"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:textSize="15dp"
                        android:textColorHint="#808080"
                        />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Mobile No.:"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="phone"
                        android:textSize="15dp"
                        android:textColorHint="#808080"
                        />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Email ID:"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/email"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="textEmailAddress"
                        android:textSize="15dp"
                        android:textColorHint="#808080"
                        />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Annual Income:"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/annualincome"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="number"
                        android:textSize="15dp"
                        android:textColorHint="#808080"
                        />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Family Income:"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/familyincome"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="number"
                        android:textSize="15dp"
                        android:textColorHint="#808080"
                        />
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Reference By:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/referenceby"
                        android:layout_width="161dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:backgroundTint="#B79C70"
                        android:backgroundTintMode="screen" />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView121"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Reference Name:"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/refname"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:textSize="15dp"
                        android:textColorHint="#808080"
                        />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cef2save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/button2"
                android:text="Prev" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:id="@+id/cef2next"
                android:background="@drawable/button2"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="30dp"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>