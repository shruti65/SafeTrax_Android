<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrmAdd">

    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/textbox"
        android:text=" CRM Entry "
        android:textSize="15dp" />
        <RadioGroup
            android:id="@+id/leavetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/meeting"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Meeting"
                android:textColor="@color/white"
                android:theme="@style/RadioButtonStyle" />

            <RadioButton
                android:id="@+id/event"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:text="Event"
                android:textColor="@color/white"
                android:theme="@style/RadioButtonStyle" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear01"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TableRow android:layout_height="30dp">
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="Client Type:"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/ctype"
                        android:layout_width="161dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:backgroundTint="#B79C70"
                        android:backgroundTintMode="screen" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:layout_height="30dp"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="Select FA:"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/fa"
                        android:layout_width="161dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:backgroundTint="#B79C70"
                        android:backgroundTintMode="screen" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:layout_height="30dp"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="Group:"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/group"
                        android:layout_width="161dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:backgroundTint="#B79C70"
                        android:backgroundTintMode="screen" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:layout_height="30dp"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="Communication\nType:"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/commutype"
                        android:layout_width="161dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:backgroundTint="#B79C70"
                        android:backgroundTintMode="screen" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_height="60dp"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Meeting Date:"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="32dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/datepicker1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/cal" />

                            <EditText
                                android:id="@+id/date"
                                android:layout_width="115dp"
                                android:layout_height="17dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/textbox2"
                                android:gravity="center"
                                android:hint="DD-MM-YYYY"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textColorHint="#808080"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow android:layout_height="30dp"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/textView61"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="Meeting Time:"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/mtime"
                            android:layout_width="150dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="32dp"
                            android:textColor="@color/black"
                            android:background="@drawable/textbox2"
                            android:inputType="textPersonName"
                            android:textSize="15dp"
                            android:textColorHint="#808080"
                            />
                    </LinearLayout>
                </TableRow>

                <TableRow android:layout_height="30dp"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/textView62"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="No. of Minute:"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/nofmin"
                            android:layout_width="150dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="32dp"
                            android:textColor="@color/black"
                            android:background="@drawable/textbox2"
                            android:inputType="textPersonName"
                            android:textSize="15dp"
                            android:textColorHint="#808080"
                            />
                    </LinearLayout>
                </TableRow>

                <TableRow android:layout_height="30dp"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/textView63"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="Status:"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/crmtadd"
                            android:layout_width="150dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="32dp"
                            android:text="Add"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:layout_height="30dp"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/textView64"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="VADA:"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="32dp"
                            android:text="Add"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </TableRow>




            </TableLayout>

            <Button
                android:id="@+id/add"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/button2"
                android:text="Add" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear02"
        android:visibility="gone"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        <TableRow android:layout_height="30dp">
            <TextView
                android:id="@+id/textView51"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="Event:"
                android:textSize="15dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/event1"
                    android:layout_width="161dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="32dp"
                    android:backgroundTint="#B79C70"
                    android:backgroundTintMode="screen" />
            </LinearLayout>
        </TableRow>
            <TableRow
                android:layout_height="60dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="From Date:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/datepicker2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cal" />

                        <EditText
                            android:id="@+id/fdate"
                            android:layout_width="115dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/textbox2"
                            android:gravity="center"
                            android:hint="DD-MM-YYYY"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:textColorHint="#808080"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_height="60dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="To Date:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/datepicker3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cal" />

                        <EditText
                            android:id="@+id/todate"
                            android:layout_width="115dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/textbox2"
                            android:gravity="center"
                            android:hint="DD-MM-YYYY"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:textColorHint="#808080"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/add2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/button2"
            android:text="Add" />
    </LinearLayout>

    </LinearLayout>
</FrameLayout>