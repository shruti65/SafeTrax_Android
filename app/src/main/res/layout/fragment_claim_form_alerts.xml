<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClaimFormAlerts">

        <TextView
            android:id="@+id/changetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background=" #B79C70"
            android:text="Status"
            android:textSize="20sp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/textbox"
        android:text=" Add Status "
        android:textSize="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TableRow android:layout_height="30dp">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Status:"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="32dp">
                    <Spinner
                        android:id="@+id/status"
                        android:layout_width="161dp"
                        android:layout_height="17dp"
                        android:backgroundTint="#B79C70"
                        android:backgroundTintMode="screen" />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Status Date:"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="32dp">
                        <ImageView
                            android:id="@+id/datepicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cal" />
                        <EditText
                            android:id="@+id/date"
                            android:layout_width="115dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/textbox2"
                            android:gravity="center"
                            android:hint="DD-MM-YYYY"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:textColorHint="#808080"
                            android:textSize="15dp" />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Upload \nDocuments:"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="32dp">

                    <Button
                        android:id="@+id/choosebtn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/button3"
                        android:text="+ Choose" />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Remark:"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <EditText
                        android:id="@+id/remark"
                        android:layout_width="150dp"
                        android:layout_height="47dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="textMultiLine"
                        android:textSize="15dp"
                        android:lines="5"
                        android:textColorHint="#808080"
                        />
                </LinearLayout>
            </TableRow>

        </TableLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/add"
            android:text=" Add "
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button3"/>
    </LinearLayout>


</FrameLayout>