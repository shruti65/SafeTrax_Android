<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".leave">
    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="308dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@drawable/cellborder"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/golden"
                android:text=" Leave Details "
                android:textSize="15dp" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TableRow android:layout_height="20dp"
                    android:layout_marginTop="10dp">
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Opening Balance :"
                        android:textSize="10dp">
                    </TextView>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="45"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp">
                    </TextView>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Opening Balance :"
                        android:textSize="10dp">
                    </TextView>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="35"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp">
                    </TextView>
                </TableRow>
                <TableRow android:layout_height="20dp"
                    android:layout_marginTop="10dp">
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Availed :"
                        android:textSize="10dp">
                    </TextView>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="0"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp">
                    </TextView>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Availed :"
                        android:textSize="10dp">
                    </TextView>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="0"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp">
                    </TextView>
                </TableRow>
                <TableRow android:layout_height="20dp"
                    android:layout_marginTop="10dp">
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Remaining Balance :"
                        android:textSize="10dp">
                    </TextView>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="45"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp">
                    </TextView>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Remaining Balance :"
                        android:textSize="10dp">
                    </TextView>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="35"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp">
                    </TextView>
                </TableRow>

            </TableLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox"
            android:text=" Leave Entry "
            android:textSize="15dp" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TableRow android:layout_height="30dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Type:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/leavetype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/PL"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="PL"
                            android:textColor="@color/white"
                            android:theme="@style/RadioButtonStyle" />

                        <RadioButton
                            android:id="@+id/SL"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:text="SL"
                            android:textColor="@color/white"
                            android:theme="@style/RadioButtonStyle" />

                        <RadioButton
                            android:id="@+id/LWP"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:text="LWP"
                            android:textColor="@color/white"
                            android:theme="@style/RadioButtonStyle" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/changetext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_height="60dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="From Date \nand Time:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/datepicker1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cal" />

                        <EditText
                            android:id="@+id/date"
                            android:layout_width="115dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/textbox2"
                            android:gravity="center"
                            android:hint="DD-MM-YYYY"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:textColorHint="#808080"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="No. of Days:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:theme="@style/MySeekBar" />

                    <TextView
                        android:id="@+id/seekbartext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="180dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/halfday"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="32dp"
                        android:background="@drawable/button3"
                        android:text="HalfDay"
                        android:textAlignment="center" />
                </LinearLayout>

            </TableRow>

            <ScrollView
                android:id="@+id/sc1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
            </ScrollView>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Standard Reason:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/li1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/reason"
                        android:layout_width="161dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:backgroundTint="#B79C70"
                        android:backgroundTintMode="screen" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Sub Reason:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/subreason"
                        android:layout_width="150dp"
                        android:layout_height="47dp"
                        android:layout_marginLeft="32dp"
                        android:background="@drawable/textbox2"
                        android:inputType="textMultiLine"
                        android:textColor="@color/black"
                        android:textColorHint="#808080"
                        android:textSize="15dp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Upload Document:"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/document"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="32dp"
                        android:background="@drawable/button3"
                        android:text="Choose" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:text="** Only PDF file will be acceptable"
                        android:textSize="10dp" />

                </LinearLayout>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/leavesubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button2"
                android:text="Submit" />

            <Button
                android:id="@+id/leavecancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button2"
                android:text="Cancel" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>