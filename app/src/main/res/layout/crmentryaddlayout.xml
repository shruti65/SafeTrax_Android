<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/textbox"
        android:text=" Add Status "
        android:textSize="15dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
    <TableRow android:layout_height="30dp">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Product :"
            android:textSize="15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/product"
                android:layout_width="150dp"
                android:layout_height="17dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="#B79C70"
                android:backgroundTintMode="screen" />
        </LinearLayout>
    </TableRow>
        <TableRow android:layout_height="30dp"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Purpose :"
                android:textSize="15dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/purpose"
                    android:layout_width="150dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="50dp"
                    android:backgroundTint="#B79C70"
                    android:backgroundTintMode="screen" />
            </LinearLayout>
        </TableRow>

        <TableRow android:layout_height="30dp"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Status :"
                android:textSize="15dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/status"
                    android:layout_width="150dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="50dp"
                    android:backgroundTint="#B79C70"
                    android:backgroundTintMode="screen" />
            </LinearLayout>
        </TableRow>

        <TableRow android:layout_height="30dp"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Standard Remark :"
                android:textSize="15dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/sremark"
                    android:layout_width="150dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="50dp"
                    android:backgroundTint="#B79C70"
                    android:backgroundTintMode="screen" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_height="60dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Next Meeting Date"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/datepicker1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cal" />

                    <EditText
                        android:id="@+id/date"
                        android:layout_width="100dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/textbox2"
                        android:gravity="center"
                        android:hint="DD-MM-YYYY"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#808080"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>
        </TableRow>

        <TableRow android:layout_height="30dp"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/textView61"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Executed Value :"
                android:textSize="15dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/evalue"
                    android:layout_width="150dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    android:background="@drawable/textbox2"
                    android:inputType="textPersonName"
                    android:textSize="15dp"
                    android:textColorHint="#808080"
                    />
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewlist"
        android:text="ViewList"
        android:layout_marginTop="12dp"
        android:layout_gravity="right"
        android:textColor="@color/blue"
        android:textSize="15dp"/>
    <Button
        android:id="@+id/add"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/button2"
        android:text="Add" />
</LinearLayout>