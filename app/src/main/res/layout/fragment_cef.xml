<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cef">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A587B"
        android:gravity="center_horizontal"
        android:text="CEF ENTRY"
        android:textSize="20dp"
        android:layout_marginRight="38dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox"
            android:text=" Personal Details "
            android:textSize="15dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TableRow android:layout_height="30dp">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Group Name:"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <EditText
                    android:id="@+id/groupname"
                    android:layout_width="150dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="32dp"
                    android:textColor="@color/black"
                    android:background="@drawable/textbox2"
                    android:inputType="textPersonName"
                    android:textSize="15dp"
                    android:textColorHint="#808080"
                    />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:text="Name:" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/prefix"
                        android:layout_width="161dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:backgroundTint="#B79C70"
                        android:backgroundTintMode="screen" />

                    <EditText
                        android:id="@+id/fname"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:hint=" First Name "
                        android:textColorHint="#808080"
                        />

                    <EditText
                        android:id="@+id/mname"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:hint=" Middle Name "
                        android:textColorHint="#808080"/>
                    <EditText
                        android:id="@+id/lname"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:hint=" Last Name "
                        android:textColorHint="#808080"/>
                </LinearLayout>

            </TableRow>
            <TableRow android:layout_marginTop="12dp"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Client Type:"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/clienttype"
                        android:layout_width="161dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:backgroundTint="#B79C70"
                        android:backgroundTintMode="screen" />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_marginTop="12dp"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Nationality:"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/nationality"
                        android:layout_width="161dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:backgroundTint="#B79C70"
                        android:backgroundTintMode="screen" />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="PAN:"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <EditText
                    android:id="@+id/pan"
                    android:layout_width="150dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="32dp"
                    android:textColor="@color/black"
                    android:background="@drawable/textbox2"
                    android:inputType="textPersonName"
                    android:textSize="15dp"
                    android:textColorHint="#808080"
                    />
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="KYC Processed:"
                    android:textSize="15dp"/>

                <RadioGroup android:layout_marginLeft="50dp"
                    android:orientation="horizontal"
                    android:id="@+id/kyc">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:id="@+id/kycyes"
                        android:text="Yes"
                        android:textColor="@color/white"
                        android:theme="@style/RadioButtonStyle"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/kycno"
                        android:text="No"
                        android:textColor="@color/white"
                        android:theme="@style/RadioButtonStyle"/>
                </RadioGroup>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Split Group:"
                    android:textSize="15dp"/>
                <RadioGroup android:layout_marginLeft="50dp"
                    android:orientation="horizontal"
                    android:id="@+id/splitgroup">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:id="@+id/splityes"
                        android:text="Yes"
                        android:textColor="@color/white"
                        android:theme="@style/RadioButtonStyle"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/splitno"
                        android:text="No"
                        android:textColor="@color/white"
                        android:theme="@style/RadioButtonStyle"/>
                </RadioGroup>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="D.O.B.:"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/datepicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cal" />
                    <EditText
                        android:id="@+id/dob"
                        android:layout_width="115dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/textbox2"
                        android:gravity="center"
                        android:hint="DD-MM-YYYY"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#808080"
                        android:textSize="15dp" />
                </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_height="30dp"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Age:"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/age"
                    android:layout_width="150dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="32dp"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:text="AGE"
                    android:gravity="center"/>
                    />
            </TableRow>
            <TableRow android:layout_marginTop="12dp"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Maritial Status:"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/maritialstatus"
                        android:layout_width="161dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:backgroundTint="#B79C70"
                        android:backgroundTintMode="screen" />
                </LinearLayout>
            </TableRow>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/spouselayout"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="130dp"
                        android:layout_height="25dp"
                        android:text="Spouse Name:"
                        android:textSize="15dp"/>
                    <EditText
                        android:id="@+id/spousename"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:textSize="15dp"
                        android:textColorHint="#808080"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView120"
                        android:layout_width="130dp"
                        android:layout_height="25dp"
                        android:text="Spouse D.O.B.:"
                        android:textSize="15dp"/>
                    <EditText
                        android:id="@+id/spousedob"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="date"
                        android:textSize="15dp"
                        android:textColorHint="#808080"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView150"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Anniversary Date:"
                        android:textSize="15dp"/>
                    <EditText
                        android:id="@+id/anniversarydate"
                        android:layout_width="150dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="textPersonName"
                        android:textSize="15dp"
                        android:textColorHint="#808080"
                        />
                </LinearLayout>
            </LinearLayout>

            <TableRow android:layout_marginTop="12dp"
                android:layout_height="30dp">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:text="Family Size:"
            android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
        <EditText
            android:id="@+id/famsize"
            android:layout_width="150dp"
            android:layout_height="17dp"
            android:layout_marginLeft="32dp"
            android:textColor="@color/black"
            android:background="@drawable/textbox2"
            android:inputType="number"
            android:textSize="15dp"
            android:textColorHint="#808080"
            />
        </LinearLayout></TableRow>

            <TableRow android:layout_marginTop="12dp"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="No of Dependents:"
                    android:textSize="15dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/noofdep"
                        android:layout_width="50dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="32dp"
                        android:textColor="@color/black"
                        android:background="@drawable/textbox2"
                        android:inputType="number"
                        android:textSize="15dp"
                        android:textColorHint="#808080"
                        />
                </LinearLayout></TableRow>

        </TableLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cefnext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="220dp"
                android:background="@drawable/button2"
                android:text="Next" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>